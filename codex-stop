#!/bin/bash
# Stop a Codex CLI instance
# Usage: ./codex-stop [instance-name]

set -e

if [ -z "$1" ]; then
    echo "Usage: ./codex-stop <instance-name>"
    echo ""
    echo "Available instances:"
    docker ps --filter "name=codex-" --format "  - {{.Names}}" | sed 's/-claude-code-1//' | sed 's/codex-//'
    exit 1
fi

INSTANCE_NAME="$1"
PROJECT_NAME="codex-${INSTANCE_NAME}"

echo "ðŸ›‘ Stopping Codex CLI instance: $INSTANCE_NAME"
docker-compose -p "$PROJECT_NAME" stop
echo "âœ“ Instance stopped"
