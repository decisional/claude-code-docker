#!/bin/bash
# Stop a Codex CLI instance
# Usage: ./codex-stop [instance-name]

set -e

if [ -z "$1" ]; then
    echo "Usage: ./codex-stop <instance-name>"
    echo ""
    echo "Available instances:"
    docker ps --filter "name=codex-" --format "  - {{.Names}}" | sed 's/-claude-code-1//' | sed 's/codex-//'
    exit 1
fi

INSTANCE_NAME="$1"
CONTAINER_NAME="codex-${INSTANCE_NAME}-claude-code-1"

# Check if container exists and is running
if ! docker ps -q -f name="^${CONTAINER_NAME}$" 2>/dev/null | grep -q .; then
    echo "‚ùå No running instance found: $INSTANCE_NAME"
    exit 1
fi

echo "üõë Stopping Codex CLI instance: $INSTANCE_NAME"
docker stop "$CONTAINER_NAME"
echo "‚úì Instance stopped"
